{
    "taskbar_row_count": {
        "type" : "spinbutton",
        "default" : 2,
        "min" : 1,
        "max" : 5,
        "units": "rows",
        "step" : 1,
        "description" : "number of rows for the taskbar"
    },
    "min_buttons_per_line": {
        "type" : "spinbutton",
        "default" : 8,
        "min" : 1,
        "max" : 20,
        "units": "buttons",
        "step" : 1,
        "description" : "minimum number of tasks on one line, before we start filling in the next line"
    },
    "taskbar_all_workspaces": {
        "type": "checkbox",
        "default": true,
        "description" : "include windows from all workspaces?"
    },
    "task_middleclick_action": {
        "type": "radiogroup",
        "default": 1,
        "description" : "behavior on clicking the middle mouse button on a task",
        "options" : {
            "close window": 0,
            "duplicate window": 1
        }
    },
    "panel_icon_size": {
        "type": "spinbutton",
        "default": 24,
        "min": 12,
        "max": 48,
        "units": "pixel",
        "step": 1,
        "description": "icon size for the spinner when loading"
    },
    "default_icon_size": {
        "type": "spinbutton",
        "default": 16,
        "min": 12,
        "max": 48,
        "units": "pixel",
        "step": 1,
        "description": "icon size for the task icons (defines row height)"
    }
}